<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppthemeActionbar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppthemeSplash" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppthemeSplashTwo" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorSpTwo</item>
        <item name="colorPrimaryDark">@color/colorSpTwo</item>
        <item name="colorAccent">@color/colorSpTwo</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF3A5BB8</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ffffff</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF3A5BB8</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PageControl" parent="AppTheme">
        <item name="apcStyles">@style/AppPageControlStyle</item>
    </style>
    <style name="AppPageControlStyle">
        <item name="apc_colorCurrentDefault">@color/colorWhite</item>
        <item name="apc_colorCurrentPressed">@color/colorWhite</item>
        <item name="apc_colorNormalDefault">@color/colorBlackTwo</item>
        <item name="apc_colorNormalPressed">@color/colorBlackTwo</item>
    </style>

    <style name="RatingBar.Yellow" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrayOne</item>
        <item name="colorControlActivated">@color/colorSelect</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">

    </style>

   <!-- <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>-->

</resources>
