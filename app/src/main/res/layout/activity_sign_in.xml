<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_3"
    tools:context="com.jobportal.jobseeker.seeker.JobPortalIntro.Activity.SignInActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/be_icon_white"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="be-reached"
                android:textSize="@dimen/big_text_five"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <!--Email-->
        <LinearLayout
            android:layout_margin="@dimen/margin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mail_icon"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_email_signin"
                    android:textSize="@dimen/normal_text"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:hint="@string/email_address"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlackOne"/>

        </LinearLayout>


        <!--Password-->
        <LinearLayout
            android:layout_margin="@dimen/margin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password_icon"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_password_signin"
                    android:textSize="@dimen/normal_text"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:hint="@string/password"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlackOne"/>

        </LinearLayout>


        <!--Forget Password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_forget_pswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Your Password?"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/normal_midle"
                android:textColor="@color/colorWhite"/>
            </RelativeLayout>

        </LinearLayout>


        <!--Button Signin-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="@dimen/margin_left_one"
                android:layout_marginRight="@dimen/marging_right_one">

                <Button
                    android:id="@+id/btn_signip"
                    android:text="@string/sign_in"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded_sp_two"/>
            </LinearLayout>

        </LinearLayout>


        <!--WITH-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="@dimen/marging_right">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/colorBlackOne"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_left_one"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="with"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorBlackOne"
                android:layout_marginRight="@dimen/marging_right_one"/>


        </LinearLayout>

        <!--social media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="@dimen/marging_right">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/btn_face_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fb_icon"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_googleplus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:baselineAligned="false"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/gplus_icon" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <Button
                    android:id="@+id/btn_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/linked_in"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
