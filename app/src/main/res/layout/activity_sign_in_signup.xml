<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.jobportal.jobseeker.seeker.JobPortalIntro.Activity.SignInSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_one"
            android:layout_marginRight="@dimen/marging_right_one">

            <Button
                android:id="@+id/btn_signin"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rounded_sp_two"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_one"
            android:layout_marginRight="@dimen/marging_right_one">

        <Button
            android:id="@+id/btn_signup"
            android:text="Sign Up"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded_signup"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>



        <!--WITH-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="@dimen/marging_right">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/colorBlackOne"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_left_one"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="with"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorBlackOne"
                android:layout_marginRight="@dimen/marging_right_one"/>


        </LinearLayout>

        <!--social media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="@dimen/marging_right">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/btn_face_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/facebook"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/btn_googleplus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:baselineAligned="false"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/google_plus" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/btn_linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/linkedin"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <!--Terms and Privacy-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

            <TextView
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="By signing up you agree with our"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_midle"/>
            <TextView
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Terms and conditions"
                android:textSize="@dimen/normal_midle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:gravity="left"
                    android:layout_marginBottom="5dp"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:text="and"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_midle"/>
                <TextView
                    android:gravity="left"
                    android:layout_marginBottom="5dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_midle"
                    android:text="Privacy Policy"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
