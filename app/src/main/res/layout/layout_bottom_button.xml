<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="visible">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:id="@+id/radiogrp_button"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioone_ignore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/ignore"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/radio_drawable" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/radiotwo_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/radio_drawable" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/radiothree_shortlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/shortlist"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/radio_drawable" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/radiofour_reach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/reach"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/radio_drawable" />
    </RadioGroup>
    </LinearLayout>

